{
  "hosting": {
    "public": "dist/apps/client",
    "rewrites": [
      {
        "source": "/image",
        "run": {
          "serviceId": "app",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "app",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "config/firebase/firestore.rules",
    "indexes": "config/firebase/firestore.indexes.json"
  }
}
